{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "WebWorker"],
    "target": "ESNext",
    "module": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true
  },
  "files": ["package.json"],
  "include": ["vite.config.ts", "./types/**/*", "src/**/*", "src/**/*.json"]
}
