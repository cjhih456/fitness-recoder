{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.production"
      ],
      "env": ["VITE_URL_ROOT"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^@types/sqlite-message-types#build",
        "^@types/fitness-struct#build",
        "^vite-plugin-i18next-language-pack-loader#build",
        "^@fitness/graphql-worker#build",
        "^@fitness/sqlite-worker#build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env"
      ],
      "env": ["VITE_URL_ROOT"]
    }
  },
  "ui": "stream"
}
