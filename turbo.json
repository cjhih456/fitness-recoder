{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "clean": {
      "dependsOn": ["^clean"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "preview": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^@types/sqlite-message-types#build",
        "^@types/fitness-struct#build",
        "^vite-plugin-i18next-language-pack-loader#build",
        "^@fitness/graphql-worker#build",
        "^@fitness/sqlite-worker#build"
      ]
    }
  },
  "ui": "stream"
}
