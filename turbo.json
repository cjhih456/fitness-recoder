{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["VITE_URL_ROOT"],
  "tasks": {
    "clean": {
      "dependsOn": ["^clean"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "preview": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"]
    },
    "@fitness/web#build": {
      "dependsOn": [
        "^vite-plugin-i18next-language-pack-loader#build",
        "^@fitness/vite-plugin-graphql-server#build",
        "^@fitness/graphql-worker#build",
        "^@fitness/sqlite-worker#build"
      ]
    },
    "@fitness/graphql-worker#build": {
      "dependsOn": [
        "^@types/sqlite-message-types#build",
        "^@types/fitness-struct#build"
      ]
    },
    "@fitness/sqlite-worker#build": {
      "dependsOn": [
        "^@types/sqlite-message-types#build",
        "^@types/fitness-struct#build"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^vite-plugin-i18next-language-pack-loader#build",
        "^@fitness/vite-plugin-graphql-server#build",
        "^@fitness/graphql-worker#build",
        "^@fitness/sqlite-worker#build"
      ]
    }
  },
  "ui": "stream"
}
