  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "WebWorker"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./types/**/*", "workerSrc/**/*.ts"]
}
