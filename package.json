{
  "name": "fitness-recoder",
  "version": "1.0.0",
  "description": "Let's recode workout history.",
  "private": true,
  "scripts": {
    "show": "turbo show",
    "build": "dotenvx run --env-file=.env.production turbo build",
    "dev": "dotenvx run --env-file=.env turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "keywords": [
    "fitness"
  ],
  "author": "In-hwan Choi <cjhih43@gmail.com>",
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.24.2",
    "dotenv": "^16.4.5",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "turbo": "^2.3.0"
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  }
}
