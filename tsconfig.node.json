{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "jsx": "react-jsx",
    "typeRoots": ["./node_modules/@types"],
  },
  "include": ["vite.config.ts", "vitePlugin", "./types/**/*", "./src/**/*"],
  "exclude": ["workerSrc/**/*.ts"]
}
